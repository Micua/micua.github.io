{
  "name": "zce.github.io",
  "version": "0.1.0",
  "slogan": "zce's personal homepage",
  "keywords": [
    "homepage",
    "zce"
  ],
  "homepage": "https://github.com/zce/zce.github.io#readme",
  "bugs": {
    "url": "https://github.com/zce/zce.github.io/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zce/zce.github.io.git"
  },
  "license": "MIT",
  "author": {
    "name": "zce",
    "email": "w@zce.me",
    "url": "https://zce.me"
  },
  "main": "index.html",
  "scripts": {
    "dev": "parcel *.html",
    "lint": "standard",
    "prebuild": "rimraf dist",
    "build": "parcel build *.html --no-source-maps --public-url .",
    "postbuild": "cpy favicon.ico CNAME dist",
    "deploy": "gh-pages -d dist -b master",
    "commit": "git-cz"
  },

  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn lint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "commitizen": "^3.0.5",
    "cpy-cli": "^2.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "parcel-bundler": "^1.11.0",
    "rimraf": "^2.6.3",
    "standard": "^12.0.1"
  }
}
